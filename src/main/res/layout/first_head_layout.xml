<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <cn.bingoogolapple.bgabanner.BGABanner
        android:id="@+id/first_banner"
        android:layout_width="0dp"
        app:banner_pointAutoPlayAble="false"
        app:banner_pointContainerBackground="@android:color/transparent"
        app:banner_pointLeftRightMargin="3dp"
        app:banner_pointTopBottomMargin="5dp"
        app:banner_pointDrawable="@drawable/selector_point"
        android:layout_height="320dp"/>

    <LinearLayout
        android:id="@+id/center_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/first_banner"
        android:layout_width="0dp"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/first_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="2"
            android:textSize="14sp"
            android:layout_marginRight="80dp"
            tools:text="hahahahahhahahahahahahhahahahahahahahhahahahahah"/>
        <TextView
            android:id="@+id/tv_first_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            android:textSize="10sp"
            android:gravity="center"
            android:drawableTop="@drawable/ic_share_black_24dp"
            android:text="分享"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_first_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_red_dark"
            tools:text="￥123"/>
        <TextView
            android:id="@+id/tv_first_price_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            tools:text="￥123"/>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_first_postage"
                android:layout_width="0dp"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="快递： 8"/>
            <TextView
                android:id="@+id/tv_first_sell_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="12sp"
                tools:text="月售： 8笔"/>
            <TextView
                android:id="@+id/tv_first_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:textSize="12sp"
                tools:text="北京"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_first"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="15dp"
        android:background="#f2f0f2"
        android:paddingVertical="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/center_container"
        >
        <TextView
            android:drawableLeft="@drawable/detail_mid_ic_checked"
            android:drawablePadding="4dp"
            android:id="@+id/tv_first_service_order_risk"
            android:layout_width="0dp"
            android:textSize="10sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="订单险"/>
        <TextView
            android:id="@+id/tv_first_service_return_goods"
            android:drawableLeft="@drawable/detail_mid_ic_checked"
            android:drawablePadding="4dp"
            android:layout_width="0dp"
            android:textSize="10sp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="15天退货"/>
        <TextView
            android:id="@+id/tv_first_service_ant"
            android:drawableLeft="@drawable/detail_mid_ic_checked"
            android:drawablePadding="4dp"
            android:layout_width="0dp"
            android:textSize="10sp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="蚂蚁花呗"/>
        <TextView
            android:id="@+id/tv_first_dialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:rotation="180"
            android:translationX="65dp"
            android:drawableRight="@drawable/ic_chevron_left_black_24dp"/>
    </LinearLayout>
    <View
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:orientation="horizontal"
        android:background="#ede9ed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_first"/>
</android.support.constraint.ConstraintLayout>