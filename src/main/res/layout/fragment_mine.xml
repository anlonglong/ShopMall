<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">
<TextView
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center"
    android:text="我的"
    android:textSize="18sp"
    android:textColor="@android:color/black"/>
    <include layout="@layout/line_gray_divider"
        android:layout_height="1dp"
        android:layout_width="match_parent"/>
    <RelativeLayout
        android:id="@+id/mine_login"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="90dp">
        <ImageView
            android:id="@+id/avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/common_ic_user"/>
        <LinearLayout
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/avatar"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/login_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您还没有登录"
                android:includeFontPadding="false"
                android:textColor="@color/gray"/>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:id="@+id/mine_rate_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:rotation="180"
            android:src="@drawable/ic_chevron_left_black_24dp"/>
    </RelativeLayout>
    <include layout="@layout/line_gray_divider"/>
   <com.allen.library.SuperTextView
       android:id="@+id/order"
       android:layout_width="match_parent"
       android:layout_height="50dp"
       app:sLeftViewGravity="center"
       app:sUseRipple="true"
       app:sLeftIconRes="@drawable/mine_mid_ic_order"
       app:sLeftTextString="全部订单"
       app:sRightIconRes="@drawable/ic_chevron_right_black_24dp"/>
    <include layout="@layout/line_gray_divider"/>
    <com.allen.library.SuperTextView
        android:id="@+id/focus"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:sLeftViewGravity="center"
        app:sUseRipple="true"
        app:sLeftIconRes="@drawable/mine_mid_ic_love"
        app:sLeftTextString="我的关注"
        app:sRightIconRes="@drawable/ic_chevron_right_black_24dp"/>
    <include layout="@layout/line_gray_divider"
             android:layout_height="1dp"
             android:layout_width="match_parent"/>
    <com.allen.library.SuperTextView
        android:id="@+id/mine_card"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:sUseRipple="true"
        app:sLeftViewGravity="center"
        app:sLeftIconRes="@drawable/mine_mid_ic_messages"
        app:sLeftTextString="我的卡券"
        app:sRightIconRes="@drawable/ic_chevron_right_black_24dp"/>
    <include layout="@layout/line_gray_divider"/>
    <com.allen.library.SuperTextView
        android:id="@+id/mine_collection"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:sLeftViewGravity="center"
        app:sUseRipple="true"
        app:sLeftIconRes="@drawable/mine_mid_ic_discuss"
        app:sLeftTextString="我的收藏"
        app:sRightIconRes="@drawable/ic_chevron_right_black_24dp"/>
    <include layout="@layout/line_gray_divider"
             android:layout_height="1dp"
             android:layout_width="match_parent"/>
    <com.allen.library.SuperTextView
        android:id="@+id/mine_history"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:sLeftViewGravity="center"
        app:sUseRipple="true"
        app:sLeftIconRes="@drawable/mine_mid_ic_messages"
        app:sLeftTextString="浏览记录"
        app:sRightIconRes="@drawable/ic_chevron_right_black_24dp"/>
    <include layout="@layout/line_gray_divider"/>
    <com.allen.library.SuperTextView
        android:id="@+id/online_service"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:sLeftViewGravity="center"
        app:sUseRipple="true"
        app:sLeftIconRes="@drawable/mine_mid_ic_service"
        app:sLeftTextString="在线客服"
        app:sRightIconRes="@drawable/ic_chevron_right_black_24dp"/>
    <include layout="@layout/line_gray_divider"
             android:layout_height="1dp"
             android:layout_width="match_parent"/>
    <com.allen.library.SuperTextView
        android:id="@+id/feedback"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:sLeftViewGravity="center"
        app:sUseRipple="true"
        app:sLeftIconRes="@drawable/mine_mid_ic_messages"
        app:sLeftTextString="回馈帮助"
        app:sRightIconRes="@drawable/ic_chevron_right_black_24dp"/>
</LinearLayout>